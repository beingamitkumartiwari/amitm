<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cvAdmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:elevation="5dp"
                android:visibility="gone"
                card_view:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/ic_treasure"
                        android:scaleType="fitXY"></ImageView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/appname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:textSize="13sp"
                            android:text="To get your offer click to your favourite ad and install your favourite app"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageview_coin"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/ic_rupee" />

                            <TextView
                                android:id="@+id/payout_admob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:singleLine="true"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/button_admobfullpage"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_selector3"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Get Offer"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ListView
                    android:id="@+id/listviewExpletus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progressBarOffer_woobi"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:elevation="10dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewSuperSonic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="false"
                android:elevation="10dp"
                android:visibility="gone"
                card_view:cardCornerRadius="3dp">

                <LinearLayout
                    android:id="@+id/ll_superSonic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible">

                    <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circular_selector"
                        android:clickable="false"
                        android:elevation="7dp"
                        android:src="@mipmap/ic_rupee_mini" />

                    <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="Click to get your offer wall and to get your credits install and run applications."-->
                    <!--android:textColor="@android:color/black" />-->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="mPaisa: offer1"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/ic_go" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewWoobo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="false"
                android:elevation="10dp"
                android:visibility="gone"
                card_view:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_woobi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="visible">

                        <ImageButton
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_circular_selector"
                            android:clickable="false"
                            android:elevation="7dp"
                            android:src="@mipmap/ic_rupee_mini" />

                        <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="Click to get your offer wall and to get your credits install and run applications."-->
                        <!--android:textColor="@android:color/black" />-->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="mPaisa: offer2"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:src="@mipmap/ic_go" />

                    </LinearLayout>
                    <!--<ProgressBar-->
                    <!--android:id="@+id/progressBarOffer_woobi"-->
                    <!--style="?android:attr/progressBarStyle"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_marginBottom="30dp"-->
                    <!--android:elevation="10dp"-->
                    <!--android:visibility="gone" />-->
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewNativX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="false"
                android:elevation="10dp"
                android:visibility="gone"
                card_view:cardCornerRadius="3dp">

                <LinearLayout
                    android:id="@+id/ll_nativX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible">

                    <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circular_selector"
                        android:clickable="false"
                        android:elevation="7dp"
                        android:src="@mipmap/ic_rupee_mini" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="mPaisa: offer3"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/ic_go" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewNativeApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="false"
                android:elevation="10dp"
                android:visibility="gone"
                card_view:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_native_apps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="visible">

                        <ImageButton
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_circular_selector"
                            android:clickable="false"
                            android:elevation="7dp"
                            android:src="@mipmap/ic_rupee_mini" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="mPaisa: offer4"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imageview_arrow_native_apps"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:src="@mipmap/ic_go" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarOffer5"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="30dp"
                        android:elevation="10dp"
                        android:visibility="gone" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <ListView
                android:id="@+id/native_app_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewMinimob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="false"
                android:elevation="10dp"
                android:visibility="gone"
                card_view:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_minimob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="visible">

                        <ImageButton
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_circular_selector"
                            android:clickable="false"
                            android:elevation="7dp"
                            android:src="@mipmap/ic_rupee_mini" />

                        <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="Click to get your offer wall and to get your credits install and run applications."-->
                        <!--android:textColor="@android:color/black" />-->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="mPaisa: offer5"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imageview_arrow"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:src="@mipmap/ic_go" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarOffer1"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="30dp"
                        android:elevation="10dp"
                        android:visibility="gone" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/listview_available_offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></ListView>
            </LinearLayout>


        </LinearLayout>
        <com.github.glomadrian.loadingballs.BallView
            android:id="@+id/animationball"
            android:layout_margin="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            lib:balls="5"
            android:visibility="gone"
            lib:movement_cycle_time="1500"
            lib:enable_size_animation="true"
            lib:size_cycle_time="500"
            android:layout_centerHorizontal="true"
            lib:min_ball_size="5dp"
            lib:max_ball_size="12dp"
            lib:ball_colors="@array/colors"
            android:layout_gravity="center"
            />
    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>