<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <com.getfreerecharge.mpaisafreerecharge.utils.ViewPagerParallax
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.getfreerecharge.mpaisafreerecharge.app_tour.FragmentIndicator
        android:id="@+id/fragment_indicator"
        app:fi_width="10dp"
        app:fi_height="4dp"
        app:fi_margin="6dp"
        app:fi_animator="@animator/indicator_animator"
        app:fi_animator_reverse="@animator/indicator_animator_reverse"
        app:fi_drawable="@drawable/indicator_radius_square"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/skip_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:clickable="true"
        android:text="Skip &amp; Join"
        android:padding="10dp"
        android:elevation="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_selector2" />
</RelativeLayout>

